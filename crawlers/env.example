# OpenMedia Crawler Environment Configuration
# Copy this file to .env and adjust values as needed

# Service Configuration
DEBUG=false
SERVICE_PORT=8080

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# PostgreSQL Configuration
POSTGRES_HOST=pgvector
POSTGRES_PORT=5432
POSTGRES_DB=scrapper
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Crawler Configuration
CRAWLER_TYPE=news
CRAWLER_ID=news-crawler-1
REGISTRY_URL=http://crawler-registry:8080
SITE_MANAGER_URL=http://site-manager:8081
SCHEDULER_URL=http://url-scheduler:8082

# Rate Limiting
DEFAULT_DELAY_MIN=1.0
DEFAULT_DELAY_MAX=3.0
DEFAULT_CONCURRENT_REQUESTS=2

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json 